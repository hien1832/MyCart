<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:background="@drawable/product_cart_item_border">
    <ImageView
        android:id="@+id/productThumbnail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/vnd_sign"/>
    <TextView
        android:id="@+id/productName"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="13dp"
        android:textColor="@color/black"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="Tai nghe phone 6/6s Zin - 🎁Tặng bao đựng + dây cuốn🎁 - Bảo hành 12 tháng lỗi 1 đổi 1"
        android:layout_toRightOf="@id/productThumbnail"/>
    <TextView
        android:id="@+id/productUnitPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30000"
        android:textColor="@color/shopee_orange"
        android:layout_below="@id/productName"
        android:layout_toRightOf="@id/productThumbnail"
        android:drawableLeft="@drawable/vnd_sign"
        android:textSize="18dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"/>
    <ImageButton
        android:id="@+id/addQuantity"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/baseline_add_box_24"
        android:layout_toRightOf="@id/productName"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="3dp"/>
    <TextView
        android:id="@+id/productQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textColor="@color/shopee_orange"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_below="@id/addQuantity"
        android:layout_toRightOf="@id/productName"
        android:layout_marginLeft="32dp"/>
    <ImageButton
        android:id="@+id/subtractQuantity"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/baseline_indeterminate_check_box_24"
        android:layout_toRightOf="@id/productName"
        android:layout_below="@id/productQuantity"
        android:layout_marginLeft="25dp"/>
    <TextView
        android:id="@+id/sumPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/shopee_orange"
        android:text="90000"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textSize="20dp"
        android:drawableLeft="@drawable/vnd_sign"
        android:maxWidth="120dp"
        android:layout_marginRight="5dp"/>

</RelativeLayout>